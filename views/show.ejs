<%- include('partials/header.ejs') -%>
<% movie.forEach((movie) => { %>

<section id="movie-background" style="background-image: url(<%=movie.background_image%>);">
    <div class="background-color">
        <a href="/movie">
            <div class="play-circle">
                <i class="fa fa-play-circle" aria-hidden="true"></i>
            </div>
        </a>
        <div class="inside">
            <div class="breadcrumb">
                <a href="/">Home</a>
                <a>/</a>
                <a href="/movie/<%=movie.id%>"><%=movie.title%></a> 
            </div>
        </div>
    </div>
</section>

<section id="description-box">
    <div class="inside-box">
        <div class="movie-img">
            <img src="<%=movie.image%>" alt="">
        </div>
        <div class="movie-details">
            <a href="#">
                <div class="play-btn">
                    <i class="fa fa-play" aria-hidden="true"></i>
                </div>
            </a>
            <div class="title">
                <span><%=movie.title%></span>
            </div>
            <hr class="hr">
            <div class="ratings">
                <span class="hd">HD</span>
                <span class="imdb"> IMDB: <%=movie.imdb%></span>
            </div>
            <div class="description">
                <span><%=movie.description%></span>
            </div>
            <div class="extras">
                <div class="column-1">
                    <div class="inside-column">
                        <span class="bold">Release:</span>
                        <span><%=movie.release_date%></span>
                       
                    </div>
                    <div >
                        <span class="bold"> Genre: </span>
                        <span><%=movie.genre%></span>
                          
                    </div>
                </div>
                <div class="column-2">
                    <div class="inside-column">
                        <span class="bold">  Duration:</span>
                        <span><%=movie.duration%> min</span>    
                    </div>
                    <div>
                        <span class="bold"> Casts: </span>
                        <span><%=movie.cast%></span> 
                    </div>
                </div>

            </div>

        </div>

    </div>

</section>
<% }) %>

